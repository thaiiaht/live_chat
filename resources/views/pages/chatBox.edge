<!DOCTYPE html>
<html>
    <head>
        <title> Chat Box</title>
        @vite(['resources/css/app.css' , 'resources/css/donate.css', 'resources/css/emoji.css'])
        @vite(['resources/js/chat.js', 'resources/js/emoji.js'])
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
    </head>
    <body>
        <button class="chat-trigger" id="chatTrigger" onclick="openChat()" style="display: none;">
            Hiển thị trò chuyện
        </button>
        <div id="chatCard">
            <div class="live-chat">
                <div class="chat-view">
                    <div class="chat-header">
                        <h3 class="chat-title">Tin nhắn hàng đầu</h3>
                        <span class="close" onclick="closeChat()">&times;</span>
                    </div>
                    <div id="messages" class="chat-messages">
                        <!-- Chat messages here -->
                    </div>
                </div>
                    <form id="form" class="chat-input-section">
                        <input id="body" type="text" class="chat-input" autocomplete="off" placeholder="Say something..." >
                        <button type="button" class="emoji-btn" id="emojiBtn">
                            <i class="fa-regular fa-face-smile fa-xl"></i>
                        </button>

                        <button type="submit" class="chat-send">
                            <i class="fa-solid fa-paper-plane"></i>
                        </button>
                    </form>
                        <div class="emoji-picker" id="emojiPicker">

            <div class="category-header" id="categoryHeader">
                <span id="categoryIcon">😊</span>
                <span id="categoryName">Mặt cười và hình người</span>
            </div>

            <div class="emoji-grid" id="emojiGrid"></div>

            <div class="categories">
                <button class="category-btn active" data-category="smileys" title="Mặt cười">😊</button>
                <button class="category-btn" data-category="people" title="Con người">👋</button>
                <button class="category-btn" data-category="animals" title="Động vật">🐶</button>
                <button class="category-btn" data-category="food" title="Đồ ăn">🍕</button>
                <button class="category-btn" data-category="travel" title="Du lịch">✈️</button>
                <button class="category-btn" data-category="activities" title="Hoạt động">⚽</button>
                <button class="category-btn" data-category="objects" title="Đồ vật">💡</button>
            </div>
        </div>
                    
            </div>
        </div>


    </body> 
</html>